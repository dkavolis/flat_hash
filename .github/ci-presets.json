{
    "version": 3,
    "configurePresets": [
        {
            "name": "ci-linux",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            },
            "inherits": [
                "Release",
                "develop"
            ]
        },
        {
            "name": "ci-linux-debug",
            "inherits": [
                "Debug",
                "ci-linux"
            ]
        },
        {
            "name": "ci-msvc",
            "inherits": [
                "ci-linux"
            ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "ci-msvc-debug",
            "inherits": [
                "Debug",
                "ci-msvc"
            ]
        },
        {
            "name": "ci-codecov",
            "inherits": [
                "Debug",
                "ci-linux"
            ],
            "cacheVariables": {
                "FLAT_HASH_ENABLE_CODE_COVERAGE": true,
                "CODE_COVERAGE_VERBOSE": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "std",
            "hidden": true,
            "targets": [
                "flat_hash_tests"
            ]
        },
        {
            "name": "fmt",
            "hidden": true,
            "targets": [
                "flat_hash_tests-fmt"
            ]
        },
        {
            "name": "ci-msvc",
            "configurePreset": "ci-msvc",
            "inherits": [
                "std"
            ]
        },
        {
            "name": "ci-linux",
            "configurePreset": "ci-linux",
            "inherits": [
                "std"
            ]
        },
        {
            "name": "ci-msvc-fmt",
            "configurePreset": "ci-msvc",
            "inherits": [
                "fmt"
            ]
        },
        {
            "name": "ci-linux-fmt",
            "configurePreset": "ci-linux",
            "inherits": [
                "fmt"
            ]
        },
        {
            "name": "ci-msvc-debug",
            "configurePreset": "ci-msvc-debug",
            "inherits": [
                "std"
            ]
        },
        {
            "name": "ci-linux-debug",
            "configurePreset": "ci-linux-debug",
            "inherits": [
                "std"
            ]
        },
        {
            "name": "ci-msvc-fmt-debug",
            "configurePreset": "ci-msvc-debug",
            "inherits": [
                "fmt"
            ]
        },
        {
            "name": "ci-linux-fmt-debug",
            "configurePreset": "ci-linux-debug",
            "inherits": [
                "fmt"
            ]
        },
        {
            "name": "ci-codecov",
            "configurePreset": "ci-codecov",
            "targets": [
                "flat_hash_coverage_xml"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "hidden": true,
            "execution": {
                "noTestsAction": "ignore"
            }
        },
        {
            "name": "ci-msvc",
            "configurePreset": "ci-msvc",
            "inherits": [
                "default"
            ]
        },
        {
            "name": "ci-linux",
            "configurePreset": "ci-linux",
            "inherits": [
                "default"
            ]
        },
        {
            "name": "ci-msvc-fmt",
            "configurePreset": "ci-msvc",
            "inherits": [
                "default"
            ]
        },
        {
            "name": "ci-linux-fmt",
            "configurePreset": "ci-linux",
            "inherits": [
                "default"
            ]
        },
        {
            "name": "ci-msvc-debug",
            "configurePreset": "ci-msvc-debug",
            "inherits": [
                "default"
            ]
        },
        {
            "name": "ci-linux-debug",
            "configurePreset": "ci-linux-debug",
            "inherits": [
                "default"
            ]
        },
        {
            "name": "ci-msvc-fmt-debug",
            "configurePreset": "ci-msvc-debug",
            "inherits": [
                "default"
            ]
        },
        {
            "name": "ci-linux-fmt-debug",
            "configurePreset": "ci-linux-debug",
            "inherits": [
                "default"
            ]
        },
        {
            "name": "ci-codecov",
            "configurePreset": "ci-codecov"
        }
    ]
}
