{
    "version": 3,
    "configurePresets": [
        {
            "name": "ci-linux",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            },
            "inherits": [
                "develop",
                "Release"
            ]
        },
        {
            "name": "ci-linux-fmt",
            "inherits": [
                "ci-linux",
                "use-fmtlib"
            ]
        },
        {
            "name": "ci-linux-debug",
            "inherits": [
                "ci-linux",
                "Debug"
            ]
        },
        {
            "name": "ci-linux-fmt-debug",
            "inherits": [
                "ci-linux-fmt",
                "Debug"
            ]
        },
        {
            "name": "ci-msvc",
            "inherits": [
                "ci-linux"
            ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "ci-msvc-fmt",
            "inherits": [
                "ci-linux",
                "use-fmtlib"
            ]
        },
        {
            "name": "ci-msvc-debug",
            "inherits": [
                "ci-msvc",
                "Debug"
            ]
        },
        {
            "name": "ci-msvc-fmt-debug",
            "inherits": [
                "ci-msvc-fmt",
                "Debug"
            ]
        },
        {
            "name": "ci-codecov",
            "inherits": [
                "ci-linux",
                "use-fmtlib"
            ],
            "cacheVariables": {
                "FLAT_HASH_ENABLE_CODE_COVERAGE": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ci-msvc",
            "configurePreset": "ci-msvc"
        },
        {
            "name": "ci-linux",
            "configurePreset": "ci-linux"
        },
        {
            "name": "ci-msvc-fmt",
            "configurePreset": "ci-msvc-fmt"
        },
        {
            "name": "ci-linux-fmt",
            "configurePreset": "ci-linux-fmt"
        },
        {
            "name": "ci-msvc-debug",
            "configurePreset": "ci-msvc-debug"
        },
        {
            "name": "ci-linux-debug",
            "configurePreset": "ci-linux-debug"
        },
        {
            "name": "ci-msvc-fmt-debug",
            "configurePreset": "ci-msvc-fmt-debug"
        },
        {
            "name": "ci-linux-fmt-debug",
            "configurePreset": "ci-linux-fmt-debug"
        },
        {
            "name": "ci-codecov",
            "configurePreset": "ci-codecov"
        }
    ],
    "testPresets": [
        {
            "name": "ci-msvc",
            "configurePreset": "ci-msvc"
        },
        {
            "name": "ci-linux",
            "configurePreset": "ci-linux"
        },
        {
            "name": "ci-msvc-fmt",
            "configurePreset": "ci-msvc-fmt"
        },
        {
            "name": "ci-linux-fmt",
            "configurePreset": "ci-linux-fmt"
        },
        {
            "name": "ci-msvc-debug",
            "configurePreset": "ci-msvc-debug"
        },
        {
            "name": "ci-linux-debug",
            "configurePreset": "ci-linux-debug"
        },
        {
            "name": "ci-msvc-fmt-debug",
            "configurePreset": "ci-msvc-fmt-debug"
        },
        {
            "name": "ci-linux-fmt-debug",
            "configurePreset": "ci-linux-fmt-debug"
        },
        {
            "name": "ci-codecov",
            "configurePreset": "ci-codecov"
        }
    ]
}
